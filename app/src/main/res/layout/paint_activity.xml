<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/toolsLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="#ffffffff"
        >
        <Button
            android:id="@+id/colorBtn"
            android:drawableTop="@drawable/colorpalette"
            android:drawablePadding="2dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <Button
            android:id="@+id/penBtn"
            android:drawableTop="@drawable/penpalette"
            android:drawablePadding="2dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <Button
            android:id="@+id/eraserBtn"
            android:drawableTop="@drawable/eraser"
            android:drawablePadding="2dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <Button
            android:id="@+id/undoBtn"
            android:drawableTop="@drawable/undo"
            android:drawablePadding="2dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <LinearLayout
            android:id="@+id/legendLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:background="#ffffffff"
            >
            <Button
                android:id="@+id/colorLegendButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ff000000"
                />
            <Button
                android:id="@+id/sizeLegendButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffffff"
                android:text="1"
                android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/boardLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
