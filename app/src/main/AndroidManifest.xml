<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.mob4git">

    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mob4Git">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SettingActivity"/>
        <activity android:name=".Policy_dialog"/>
        <activity android:name=".Activity_language"/>
        <activity android:name=".Activity_notice"/>
        <activity android:name=".Activity_set"/>
        <activity android:name=".Activity_version"/>
        <activity android:name=".Activity_sendmail"/>
        <activity android:name=".StorageActivity"
            android:theme="@style/StorageTheme"/>
        <activity android:name=".MemoActivity"
            android:theme="@style/Theme.AppCompat.Light"/>
    </application>

</manifest>